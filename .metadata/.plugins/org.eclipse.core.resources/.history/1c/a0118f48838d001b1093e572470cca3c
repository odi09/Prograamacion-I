#include <stdio.h>
#include <stdlib.h>


float suma(float num1,float num2, float* sResultado);
float resta(float num1,float num2, float* rResultado);
float division(float num1,float num2, float* dResultado);

int main()
{
    float valor1;
    float valor2;
    float resultado;
    char operacion;
    setbuf(stdout, NULL);

    printf("Ingrese el primer valor:");
    scanf("%f",&valor1);

    printf("Ingrese el segundo valor:");
    scanf("%f",&valor2);

    do{
    printf("Ingrese que la operacion: suma(s), resta(r), division(d): ");
    fflush(stdin);
    scanf("%s",&operacion);
    }while(operacion != 's' && operacion != 'r' && operacion != 'd');

    switch(operacion)
    {
    case 's':
        suma(valor1,valor2,&resultado);
        printf("El resultado es %.2f", resultado);
        break;
    case 'r':
        resta(valor1,valor2,&resultado);
        printf("El resultado es %.2f", resultado);
        break;
    case 'd':
        if(division(valor1,valor2, &resultado)== 0)
        {
            printf("El resultado es %.2f", resultado);
        }
        else
        {
            printf("Error");
        }
        break;

    }

    return 0;
}

float suma(float num1,float num2, float* sResultado)
{
    *sResultado=num1+num2;

    return 0;
}

float resta(float num1,float num2, float* rResultado)
{
    *rResultado=num1-num2;
    return 0;
}

float division(float num1,float num2, float* dResultado)
{
    if(num2!=0)
    {
        *dResultado=num1/num2;
    }
    else
    {
        return-1;
    }
    return 0;
}
